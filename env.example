# Onboarding Service Environment Variables

# Server Configuration
PORT=3004
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:5173

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/oms_db
POSTGRES_SSL=false

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=onboarding_db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_MODE=test

# Payment Configuration
USE_MOCK_PAYMENTS=false
SEND_MOCK_EMAILS=false
PAYMENT_BASE_URL=http://localhost:3004

# Service Authentication
ONBOARDING_SERVICE_API_KEY=secure-service-key-change-in-production
OMS_SERVER_URL=http://localhost:3003

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@xnext.co.za
SMTP_PASS=your_email_password_here
SMTP_FROM=noreply@xnext.co.za

# Client Configuration
CLIENT_URL=http://localhost:5173

# Queue Configuration
QUEUE_REDIS_URL=redis://localhost:6379
QUEUE_CONCURRENCY=5

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
JWT_SECRET=your_jwt_secret_here
API_KEY=your_api_key_here

# External Services
FNO_API_URL=http://localhost:3003
MAIN_OMS_URL=http://localhost:3003
